#include<iostream>
using namespace std;
int main(){
	int tc; cin>>tc; while(tc--){
	    int n,k; cin>>n>>k;
	    int sum=0;
	    for(int i=1;i<=n;i++){
	        int t,d;
	        cin>>t>>d;
	        if(t<=k){
	            sum=sum+0;
	            k=k-t;
	        }
	        else{
	            sum=sum+(t-k)*d;
	            k=0;
	        }
	    }
	    cout<<sum<<endl;
	}
	return 0;
}
