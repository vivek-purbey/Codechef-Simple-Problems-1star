#include<iostream>
using namespace std;
int main(){
	int t;
	cin>>t;
	while(t--){
	    int mi=0, ma=0, l;
	    string s1, s2;
	    cin>>s1;
	    cin>>s2;
	    l=s1.size(); // both s1 and s2 size same so, we can take any of them
	    for(int i=0;i<l;i++)
	    {
	        if(s1[i]=='?' or s2[i]=='?')
	        ma++;
	        else if(s1[i]!=s2[i]){
	            ma++;
	            mi++;
	        }
	        else{
	            mi;
	            ma;
	        }
	    }
	    cout<<mi<<" "<<ma<<endl;
	}
	return 0;
}
